<div class="border rounded mb-4">
    <div class="card-header">TULIS KOMENTAR</div>
    <div class="row no-gutter py-3 position-relative border-top">
        <div class="col-sm-2 text-center mb-3">
            <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="rounded-circle">
            <div class="review-block-name"><a href="#">nktailor</a></div>
            <div class="review-block-date">Kepala Desa Ciroyom</div>
        </div>
        <div class="col-sm-10">
            <form class="mt-1">
                <div class="mb-2">
                    <textarea class="form-control" style="height:80px;" id="validationTextarea" placeholder="{{#if forum}}Tuliskan komentar tentang thread ini{{/if}} {{#if product}}Ada pertanyaan atau komentar? Silakan diskusikan di sini{{/if}}" required></textarea>
                    <div class="invalid-feedback">
                    Please enter a message in the textarea.
                    </div>
                </div>
                <div class="mb-2 text-right">
                    <button type="button" class="btn btn-primary">Kirim</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="border rounded mb-4">
    {{> comment_item type="comment" channel=WP.Latest total=6 index_start=1 index_end=4}}
    <div class="row no-gutter">
        <div class="col-sm-2"></div>
        <div class="col-sm-10 pull-right">
            {{> comment_item type="comment" channel=WP.Latest total=6 index_start=1 index_end=3}}
        </div>
    </div>
</div>